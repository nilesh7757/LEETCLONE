// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProblemType {
  CODING
  SHELL
  INTERACTIVE
  SYSTEM_DESIGN
  SQL
  READING
}

model Problem {
  id          String      @id @default(uuid())
  title       String
  slug        String      @unique
  difficulty  String      // "Easy", "Medium", "Hard"
  category    String
  description String
  timeLimit   Int         @default(2) // Time limit in seconds
  memoryLimit Int         @default(256) // Memory limit in MB
  testSets    Json        @default("[]") // New field to store structured test cases
  hints       String[]    @default([]) // Progressive hints for the user
  pattern     String?     // e.g. "Sliding Window", "DP - Knapsack", "Graph - BFS"
  blueprint   Json?       // Structured Q&A for the "Pre-Code" phase
  referenceSolution String? // Added field for reference solution code
  initialSchema     String? // SQL Schema creation script
  initialData       String? // SQL Data insertion script
  editorial   String?     @db.Text // Explanation and multi-language solutions
  isPublic    Boolean     @default(true) // Determines if the problem is visible in the public library
  isVerified  Boolean     @default(true) // Admin approval flag
  source      String      @default("SYSTEM") // "SYSTEM", "USER", or "AI_GENERATED"
  lastAiFeedback String?   @db.Text // Store user feedback for AI improvement
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Problem Type Fields
  type          ProblemType @default(CODING) // New field for problem type

  creatorId   String?     // Optional for existing problems
  creator     User?       @relation("CreatedProblems", fields: [creatorId], references: [id])

  submissions Submission[]
  contests    Contest[]   // Implicit many-to-many
  studyPlans  StudyPlanProblem[]
  comments    Comment[]
  blogPosts   BlogPost[]
}

model StudyPlan {
  id            String    @id @default(uuid())
  title         String
  slug          String    @unique
  description   String
  coverImage    String?
  durationDays  Int?      // e.g. 7 for a 7-day plan, 30 for monthly
  isPublic      Boolean   @default(false) // Default to false until published
  isOfficial    Boolean   @default(false)
  status        String    @default("DRAFT") // "DRAFT", "PENDING_PUBLISH", "PUBLISHED", "PENDING_UPDATE"
  pendingData   Json?     // Stores proposed changes for admin review
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  creatorId     String?
  creator       User?     @relation("CreatedStudyPlans", fields: [creatorId], references: [id])
  
  problems      StudyPlanProblem[]
  enrollments   StudyPlanEnrollment[]
}

model StudyPlanProblem {
  id          String    @id @default(uuid())
  studyPlanId String
  studyPlan   StudyPlan @relation(fields: [studyPlanId], references: [id], onDelete: Cascade)
  problemId   String
  problem     Problem   @relation(fields: [problemId], references: [id], onDelete: Cascade)
  order       Int       @default(0) // Order within the plan (e.g., Day 1, Day 2)

  @@unique([studyPlanId, problemId])
}

model StudyPlanEnrollment {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  studyPlanId   String
  studyPlan     StudyPlan @relation(fields: [studyPlanId], references: [id], onDelete: Cascade)
  enrolledAt    DateTime  @default(now())
  
  reminderTime  String?   // HH:mm format, e.g., "09:00"
  isActive      Boolean   @default(true)

  @@unique([userId, studyPlanId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  problemId String?  // Made optional
  problem   Problem? @relation(fields: [problemId], references: [id], onDelete: Cascade) // Made optional
  
  blogPostId String? // New field for Blog Post
  blogPost   BlogPost? @relation(fields: [blogPostId], references: [id], onDelete: Cascade) // New relation
  
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  parentId  String?
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  children  Comment[] @relation("CommentReplies")
  
  votes     CommentVote[]
}

model CommentVote {
  id        String   @id @default(uuid())
  type      String   // "UP" or "DOWN"
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
}

model UserRatingHistory {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  contestId    String
  contest      Contest  @relation(fields: [contestId], references: [id])
  ratingBefore Int
  ratingAfter  Int
  rank         Int
  date         DateTime @default(now())
}

model Submission {
  id        String   @id @default(uuid())
  code      String
  language  String
  status    String   // "Accepted", "Wrong Answer", "Time Limit Exceeded"
  score     Int?     // For SYSTEM_DESIGN problems
  runtime   Float?   // in ms
  timeComplexity String?
  spaceComplexity String?
  testCaseResults Json? // Store detailed test case results
  auditPassed  Boolean?  @default(true) // Whether the AI audit approved the method
  auditFeedback String?  @db.Text // AI explanation for audit failure/success
  createdAt DateTime @default(now())
  
  problemId String
  problem   Problem @relation(fields: [problemId], references: [id])
  
  userId    String?
  user      User?   @relation(fields: [userId], references: [id])
  reports   Report[]
}

// NextAuth.js models
model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?    // Added for Credentials Provider
  bio           String?
  website       String?
  description   String?
  skills        String[]   @default([]) // User's technical skills (React, Java, etc.)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
  accounts      Account[]
  sessions      Session[]
  submissions   Submission[] // Link existing submissions to User
  createdProblems Problem[] @relation("CreatedProblems") // Added relation
  createdContests Contest[] @relation("CreatedContests")
  registrations   ContestRegistration[]
  comments        Comment[]
  commentVotes    CommentVote[]
  blogPosts       BlogPost[]
  rating          Int           @default(1500)
  ratingHistory   UserRatingHistory[]
  role            String        @default("USER") // "USER" or "ADMIN"
  warnings        Int           @default(0)
  isBanned        Boolean       @default(false)
  reportsMade     Report[]      @relation("Reporter")

  // Mock Interviews
  mockInterviews  MockInterview[]

  // Streak System
  streak          Int           @default(0)
  lastSolvedDate  DateTime?
  lastActive      DateTime?     @default(now())

  // Verification
  otp             String?
  otpExpires      DateTime?
  isVerified      Boolean       @default(false)

  // Password Reset
  resetToken      String?
  resetTokenExpires DateTime?

  // Friend/Follow System (Codeforces style: unilateral)
  following       User[]        @relation("UserFollows")
  followedBy      User[]        @relation("UserFollows")

  // Study Plans
  createdStudyPlans    StudyPlan[] @relation("CreatedStudyPlans")
  studyPlanEnrollments StudyPlanEnrollment[]

  // Chat System
  conversations   ConversationParticipant[]
  messages        Message[]

  // Snippets
  snippets        Snippet[]

  // Notifications
  notifications     Notification[] @relation("UserNotifications")
  sentNotifications Notification[] @relation("UserSentNotifications")
}

model MockInterview {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  topic         String    // e.g. "Fullstack Developer", "Backend with Python"
  difficulty    String    // "Entry", "Senior", "Staff"
  status        String    @default("ONGOING") // "ONGOING", "COMPLETED"
  
  questions     Json      // Array of objects { id: string, question: string, type: "CONCEPTUAL" | "CODING" }
  answers       Json      @default("[]") // Array of { questionId: string, answer: string, score: number, feedback: string }
  
  score         Int?      // 0-100 (Overall)
  feedback      String?   @db.Text // Overall feedback
  roadmap       Json?     // Array of { topic: string, reason: string, priority: string }
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  type      String   // COMMENT_REPLY, FOLLOW, CONTEST_START, SYSTEM
  message   String
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)

  senderId  String?
  sender    User?    @relation("UserSentNotifications", fields: [senderId], references: [id], onDelete: Cascade)
}

model Conversation {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  participants ConversationParticipant[]
  messages     Message[]
}

model ConversationParticipant {
  id             String       @id @default(uuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id])
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  lastReadAt     DateTime?    @default(now())

  @@unique([userId, conversationId])
}

model Message {
  id             String       @id @default(uuid())
  content        String?      // Optional if it's just a file
  type           String       @default("TEXT") // TEXT, IMAGE, VIDEO, AUDIO, FILE
  fileUrl        String?
  createdAt      DateTime     @default(now())
  
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

model Report {
  id           String     @id @default(uuid())
  reason       String
  createdAt    DateTime   @default(now())
  status       String     @default("PENDING") // PENDING, RESOLVED, DISMISSED
  
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id])
  
  reporterId   String
  reporter     User       @relation("Reporter", fields: [reporterId], references: [id])
}

model Contest {
  id          String   @id @default(uuid())
  title       String
  description String
  startTime   DateTime
  endTime     DateTime
  publishProblems Boolean @default(false) // Whether to make problems public after contest ends
  isOfficial      Boolean @default(false) // Official contests are managed by admins
  visibility  String   @default("PUBLIC") // "PUBLIC" or "PRIVATE"
  accessCode  String?  // Code required to join if private
  createdAt   DateTime @default(now())
  
  creatorId   String
  creator     User     @relation("CreatedContests", fields: [creatorId], references: [id])
  
  problems    Problem[] // Implicit many-to-many
  registrations ContestRegistration[]
  ratingUpdates UserRatingHistory[]
  blogPosts   BlogPost[]
}

model ContestRegistration {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  contestId String
  contest   Contest  @relation(fields: [contestId], references: [id])
  score     Int      @default(0)
  rank      Int?
  registeredAt DateTime @default(now())

  @@unique([userId, contestId])
}

model BlogPost {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?
  coverImage  String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  authorId    String
  author      User     @relation(fields: [authorId], references: [id])

  contestId   String?
  contest     Contest? @relation(fields: [contestId], references: [id])
  
  problemId   String?
  problem     Problem? @relation(fields: [problemId], references: [id])
  
  tags        String[]
  comments    Comment[] // New inverse relation for comments
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Snippet {
  id        String   @id @default(uuid())
  title     String
  code      String
  language  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}